{% schema %}
{
  "name": "Gift Guide Banner",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Paragraph",
      "default": "Discover joy in every detail with our curated collection of gifts."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Choose Gift"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Illustration"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Banner"
    }
  ]
}
{% endschema %}

<section class="gift-banner" style="background: url({{ section.settings.bg_image | img_url: 'master' }}) no-repeat center/cover;">
  <div class="gift-banner__content">
    <p class="gift-banner__subtitle">{{ section.settings.subtitle }}</p>
    <h1 class="gift-banner__heading">{{ section.settings.heading }}</h1>
    <p class="gift-banner__text">{{ section.settings.text }}</p>
    {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" class="gift-banner__btn">
        {{ section.settings.button_label }} â†’
      </a>
    {% endif %}
  </div>
</section>

<style>
.gift-banner {
  padding: 80px 20px;
  color: #111;
  text-align: left;
  position: relative;
}
.gift-banner__subtitle {
  font-size: 14px;
  text-transform: uppercase;
  color: #555;
}
.gift-banner__heading {
  font-size: 48px;
  font-weight: bold;
  margin: 10px 0;
}
.gift-banner__text {
  max-width: 500px;
  margin-bottom: 20px;
}
.gift-banner__btn {
  background: #FFD43B;
  padding: 12px 20px;
  border-radius: 5px;
  font-weight: 600;
  display: inline-block;
  transition: background 0.3s;
}
.gift-banner__btn:hover {
  background: #e6be35;
}
</style>
